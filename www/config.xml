<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "org.issousa.kirtanbhakti"
        versionCode = "10" 
        version     = "1.0.1" >

    <!-- versionCode is optional and Android only -->

    <name>Kirtan Bhakti</name>

    <description>
        Play kirtan and bhajan in your pocket anywhere, anytime 
    </description>

    <author href="http://www.issousa.org" email="support@issousa.org">
        issousa
    </author>
	<!--preference name="phonegap-version" value="4.0.0" /-->
	<preference name="orientation" value="portrait" />
	<preference name="ios-statusbarstyle" value="black-opaque" />
	<preference name="exit-on-suspend" value="false" />
	<!--<preference name="fullscreen" value="true" />-->
	
	<feature name="Media">
        <param name="ios-package" value="CDVSound" />
        </feature>
	
	<!--gap:splash src="images/loading.jpg" gap:platform="ios" /-->
	
	<gap:plugin name="org.apache.cordova.file"/>
	<gap:plugin name="org.apache.cordova.file-transfer"/>
	<gap:plugin name="org.apache.cordova.inappbrowser"/>
	<gap:plugin name="org.apache.cordova.media"/>
	<gap:plugin name="org.apache.cordova.network-information"/>
	<gap:plugin name="org.apache.cordova.vibration"/>
	<gap:plugin name="org.apache.cordova.dialogs"/>
	<gap:plugin name="org.apache.cordova.device"/>
	<!--<gap:plugin name="de.applant.cordova.plugin.local-notification" />-->
	<gap:plugin name="com.cordova.background-audio" source="plugins.cordova.io"/>
	<gap:plugin name="com.phonegap.plugin.localnotificationplugin" source="plugins.cordova.io"/>
	
	<!--icon src="icon.png" /-->
	
	<!-- iPhone 6 / 6+ -->
	<icon src="logo/ios/icon-60@3x.png" gap:platform="ios" width="180" height="180" />

	<!-- iPhone / iPod Touch  -->
	<icon src="logo/ios/icon-60.png" gap:platform="ios" width="60" height="60" />
	<icon src="logo/ios/icon-60@2x.png" gap:platform="ios" width="120" height="120" />

	<!-- iPad -->
	<icon src="logo/ios/icon-76.png" gap:platform="ios" width="76" height="76" />
	<icon src="logo/ios/icon-76@2x.png" gap:platform="ios" width="152" height="152" />

	<!-- Settings Icon -->
	<icon src="logo/ios/icon-small.png" gap:platform="ios" width="29" height="29" />
	<icon src="logo/ios/icon-small@2x.png" gap:platform="ios" width="58" height="58" />

	<!-- Spotlight Icon -->
	<icon src="logo/ios/icon-40.png" gap:platform="ios" width="40" height="40" />
	<icon src="logo/ios/icon-40@2x.png" gap:platform="ios" width="80" height="80" />
	
	<!-- iPhone / iPod Touch -->
	<icon src="logo/ios/icon.png" gap:platform="ios" width="57" height="57" />
	<icon src="logo/ios/icon@2x.png" gap:platform="ios" width="114" height="114" />

	<!-- iPad -->
	<icon src="logo/ios/icon-72.png" gap:platform="ios" width="72" height="72" />
	<icon src="logo/ios/icon-72@2x.png" gap:platform="ios" width="144" height="144" />

	<!-- iPad Spotlight and Settings Icon -->
	<icon src="logo/ios/icon-50.png" gap:platform="ios" width="50" height="50" />
	<icon src="logo/ios/icon-50@2x.png" gap:platform="ios" width="100" height="100" />
	
	<!--android-->
	<icon src="logo/android/ldpi.png" gap:platform="android" gap:density="ldpi" />
	<icon src="logo/android/mdpi.png" gap:platform="android" gap:density="mdpi" />
	<icon src="logo/android/hdpi.png" gap:platform="android" gap:density="hdpi" />
	<icon src="logo/android/xhdpi.png" gap:platform="android" gap:density="xhdpi" />
	<icon src="logo/android/xxhdpi.png" gap:platform="android" gap:density="xxhdpi" />

	<!--window-->
	<icon src="logo/window/icon.png" gap:platform="winphone" />
	<icon src="logo/window/tileicon.png" gap:platform="winphone" gap:role="background" />
	
</widget>
